{
    "name": "serendipity_hq/then-when",
    "description": "A library to calculate the time of next retry in apps that needs to be fault tolerant and retry failed attempts of doing something.",
    "type": "library",
    "keywords": [],
    "license": "MIT",
    "authors": [
        {
            "name": "Adamo Aerendir Crespi",
            "email": "hello@aerendir.me"
        }
    ],
    "require": {
        "php": "^7.2",
        "nesbot/carbon": "^2",
        "thecodingmachine/safe": "^1.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.3",
        "drenso/phan-extensions": "^2.5",
        "phan/phan": "^2.4",
        "phpmetrics/phpmetrics": "^2.5",
        "psalm/plugin-phpunit": "^0.8.1 || ^0.10.0",
        "rector/rector": "^0.6.13",
        "symfony/var-dumper": "^3||^4||^5",
        "vimeo/psalm": "^3.8"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SerendipityHQ\\Component\\ThenWhen\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SerendipityHQ\\Component\\ThenWhen\\Tests\\": "tests"
        }
    }
}
